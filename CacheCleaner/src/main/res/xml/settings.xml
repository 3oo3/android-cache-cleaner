<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:title="@string/main_preferences">

        <CheckBoxPreference
            android:title="@string/clean_on_startup"
            android:summary="@string/clean_on_startup_summary"
            android:key="@string/clean_on_startup_key" />

        <CheckBoxPreference
            android:title="@string/exit_after_clean"
            android:summary="@string/exit_after_clean_summary"
            android:key="@string/exit_after_clean_key" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/about">

        <PreferenceScreen
            android:title="@string/about_app"
            android:persistent="false"
            android:key="about">

            <PreferenceCategory
                android:title="@string/about">

                <Preference
                    android:title="@string/author"
                    android:summary="@string/author_name"
                    android:key="author">

                    <intent
                        android:action="android.intent.action.VIEW"
                        android:data="@string/authors_url" />

                </Preference>

                <Preference
                    android:title="@string/version_number"
                    android:summary="@string/version_name"
                    android:key="version"/>

                <Preference
                    android:title="@string/open_source_licences"
                    android:key="licences"/>

            </PreferenceCategory>

        </PreferenceScreen>

    </PreferenceCategory>

</PreferenceScreen>